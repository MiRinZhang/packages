{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": false,
    "noEmitOnError": true,
    "downlevelIteration": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "jsx": "react-native",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "lib": [
      "es6"
    ],
    "importHelpers": true,
    "noEmitHelpers": true
//    "typeRoots": [
    //      "./node_modules/@types"
    //    ],
    //    "types": [
    //      "node"
    //    ]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}