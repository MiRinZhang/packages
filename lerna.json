{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "yes": true,
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "*.txt",
        "test/**",
        "**/test/**",
        "eslint/**",
        "scripts/**"
      ],
      "registry": "https://registry.npmjs.org/"
    },
    "bootstrap": {
      "hoist": "true",
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  }
}
