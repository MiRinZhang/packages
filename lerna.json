{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "yes": true,
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "*.txt",
        "test/**",
        "**/test/**",
        "eslint/**",
        "scripts/**"
      ],
      "registry": "https://npm.pkg.github.com/"
    },
    "bootstrap": {
      "hoist": "true",
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "registry": "https://npm.pkg.github.com/"
    }
  }
}
