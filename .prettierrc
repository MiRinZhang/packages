{
  "arrowParens": "avoid",
  "trailingComma": "none",
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "tabWidth": 4,
  "printWidth": 80,
  "overrides": [
    {
      "files": [
        "**/packages/*/src/**/*.ts",
        "**/packages/*/test/**/*.tsx"
      ],
      "trailingComma": "none",
      "parser": "typescript"
    }
  ]
}
